<div class="beerDiv">
    {{#each beers as |beer|}}
   <div class="card mb-3" style="max-width: 940px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img class="beerImage" src="{{beer.image_url}}" alt="beer">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h1 class="card-title">{{beer.name}}</h1>
        <p class="card-text">{{beer.description}}</p>
        <p class="card-text"><b><em>{{beer.tagline}}</em></b></p>
      </div>
    </div>
  </div>
</div>
    
    {{/each}}
</div>


